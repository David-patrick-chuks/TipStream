{
  "name": "TipStream",
  "description": "Decentralized social media platform with automated tipping on Monad",
  "version": "1.0.0",
  "manifest": {
    "name": "TipStream Platform",
    "short_name": "TipStream",
    "description": "Built on Monad with MetaMask Smart Accounts",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#1a1a2e",
    "theme_color": "#16213e",
    "icons": [
      {
        "src": "/icon-192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/icon-512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "farcaster": {
    "appId": "tipstream-platform",
    "permissions": [
      "user:read",
      "cast:read",
      "cast:write"
    ],
    "features": [
      "tipping",
      "auto-tipping",
      "analytics"
    ]
  },
  "networks": {
    "monad": {
      "chainId": 10143,
      "rpcUrl": "https://testnet-rpc.monad.xyz",
      "name": "Monad Testnet"
    }
  },
  "contracts": {
    "SocialTipping": {
      "address": "0x0000000000000000000000000000000000000000",
      "abi": "SocialTipping.json"
    }
  }
}
